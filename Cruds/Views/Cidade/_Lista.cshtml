@model IEnumerable<Apresentation.Models.Cidade.CidadeViewModelGet>

@{
    int count = 0;
    Layout = null;
}

<table class="table table-hover" style="width: 100%;">
    <thead class="thead-dark">
        <tr>
            <th class="text-center">#</th>
            <th class="text-center">Nome</th>
            <th class="text-center">Estado pertencente</th>
            <th class="text-center">Editar</th>
            <th class="text-center">Excluir</th>
        </tr>
    </thead>
    <tbody style="width: 90%">
        @if (Model.Any())
        {
            foreach (var item in Model.OrderBy(p => p.Descricao))
            {
                count++;
                <tr>
                    <th class="text-center">@count</th>
                    <td class="text-center">@item.Descricao</td>
                    <td class="text-center">@item.Estado</td>
                    <td class="text-center"><button class="btn btn-outline-warning" onclick="Editar('@item.Id', '@item.Descricao', '@item.IdEstado')">-</button></td>
                    <td class="text-center"><button class="btn btn-outline-danger" onclick="Excluir('@item.Id')">-</button></td>
                </tr>
            }
        }

    </tbody>
</table>